<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Distance</th>
      <th>Total elevation gain</th>
      <th>Moving time</th>
      <th>Elapsed time</th>
      <th>Start date</th>
      <th>Start lat</th>
      <th>Start lng</th>
      <th>End lat</th>
      <th>End lng</th>
      <th>Workout type</th>
      <th>Polymap</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.description %></td>
        <td><%= activity.distance %></td>
        <td><%= activity.total_elevation_gain %></td>
        <td><%= activity.moving_time %></td>
        <td><%= activity.elapsed_time %></td>
        <td><%= activity.start_date %></td>
        <td><%= activity.start_lat %></td>
        <td><%= activity.start_lng %></td>
        <td><%= activity.end_lat %></td>
        <td><%= activity.end_lng %></td>
        <td><%= activity.workout_type %></td>
        <td><%= activity.polymap %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<style>
input {
  	display: block
}
.input {
  margin: .2em
}
</style>


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label: 'Email:' %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                label: 'Password: ' %>

    <%= f.input :remember_me, input_html: { style: "display: inline; margin-right: 1px;" }, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "h-auto bg-white hover:bg-gray-100 text-gray-800 font-semibold py-1 px-2 border border-gray-400 rounded shadow " %>
  </div>
<% end %>
